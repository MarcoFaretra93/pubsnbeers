{{#extend "body"}}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Modifiy pub's attribute</h1>
                <div class="account-wall">
                    <img class="profile-img" src="http://thewanderinghousewife.com/wp-content/uploads/2013/11/beer-2pint-tap-hand-circ-051214.png" alt="">
                    {{#with pub}}
                        <form class="form-signin" action="/pubs/{{{id}}}" method="post">
                            <input type="hidden" name="_method" value="PUT" />
                            <input class ="form-control" value="{{{name}}}"  name="name" type="text"   placeholder="Pub's name" required autofocus>
                            <input  class ="form-control" value="{{{location}}}" name="location" type="text"   placeholder="Pub's Location" required autofocus >
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
                            <a href="/pubs/{{{id}}}">
                    <button class="btn btn-lg btn-primary btn-block" type="button">Cancel</button>
                    </a>
                        </form>
                    {{/with}}
                </div>
                {{#if error}}
                    <h3 class="text-center text-danger bg-warning">{{{error}}}</h3>
                {{/if}}
                {{#if message}}
                    <h3 class="text-center text-info bg-info">{{{message}}}</h3>
                {{/if}}
            </div>
        </div>
    </div>
{{/extend}}

{{#extend "stylesheets"}}
    <link rel='stylesheet' href='/stylesheets/loginStyle.css' />
{{/extend}}
