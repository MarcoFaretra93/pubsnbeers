{{#extend "body"}}
<div class="site-wrapper">

    <div class="site-wrapper-inner">

        <div class="cover-container">

            <div class="masthead clearfix">
                <div class="inner">
                    <nav>
                        <ul class="nav masthead-nav">
                            <li class="active"><a href="/">Home</a> </li>

                            {{#unless logged}}
                            <li class="active"><a href="/login">Login</a></li>
                            <li class="active"><a href="/register">Register</a>
                                {{/unless}}
                                {{#if logged}}
                                <li class="active"><a href="/logout">Logout</a></li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="inner cover">
                    <h1 class="cover-heading">Menu</h1>
                    <img class="profile-img" src="http://thewanderinghousewife.com/wp-content/uploads/2013/11/beer-2pint-tap-hand-circ-051214.png" alt="">
                    <p class="lead"></p>
                    <p class="lead"></p>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Degrees</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <form class="form-signin" action="/beers/{{{id}}}" method="post">
                                <input type="hidden" name="_method" value="DELETE" />
                            </form>

                            {{#each result}}
                            <tr class="beer_entry">
                                <td>{{this.name}}</td>
                                <td>{{this.type}}</td>
                                <td>{{this.alcoholic_degree}}%</td>
                                <td>{{this.price}}</td>
                                <td>
                                    <a href="/beers/{{this._id}}">
                                        <button type="button" class="btn btn-danger">Show</button>
                                    </a>
                                </td>
                                <td>
                                    <form class="form-signin" action="/pubs/{{../idPub}}/beers/{{this._id}}" method="post">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        <button type="submit" class="btn btn-danger">Remove</button>

                                     </form>
                                </td>
                                <td>
                                    <a href="/pubs/{{../idPub}}/beers/{{this._id}}">
                                        <button type="button" class="btn btn-danger">Edit</button>
                                    </a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                    <a href="/pubs/{{idPub}}/beers/insert">
                    <button type="submit" class="btn btn-default">Create Menu</button></a>
                   <a href="/pubs/{{idPub}}"> <button type="submit" class="btn btn-default" >Back</button>
                   </a>
                </div>

            </div>

        </div>

    </div>

    {{/extend}}

    {{#extend "stylesheets"}}
    <link rel='stylesheet' href='/stylesheets/cover.css' />
    {{/extend}}

    {{#extend "script"}}
    {{/extend}}
