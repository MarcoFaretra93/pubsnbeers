{{#extend "body"}}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Insert a new beer into Pubs'n'Beers database</h1>
            <div class="account-wall">
                <img class="profile-img" src="http://thewanderinghousewife.com/wp-content/uploads/2013/11/beer-2pint-tap-hand-circ-051214.png" alt="">
                <form class="form-signin" action="/beers" method="post">
                    <input name="name" type="text" class="form-control" placeholder="Beer's name" required autofocus>
                    <input name="type" type="text" class="form-control" placeholder="Beer's type" required autofocus>
                    <input name="alcoholic_degree" type="number" class="form-control" placeholder="Alcoholic degree" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Insert</button>
                    <a href="/beers">
                        <button class="btn btn-lg btn-primary btn-block" type="button">Cancel</button>
                    </a>
                </form>
            </div>
            {{#if error}}
            <h3 class="text-center text-danger bg-warning">{{{error}}}</h3>
            {{/if}}
            {{#if message}}
            <h3 class="text-center text-info bg-info">{{{message}}}</h3>
            {{/if}}
        </div>
    </div>
</div>
{{/extend}}

{{#extend "stylesheets"}}
<link rel='stylesheet' href='/stylesheets/loginStyle.css' />
{{/extend}}
