{{#extend "body"}}
<div class="site-wrapper">

    <div class="site-wrapper-inner">

        <div class="cover-container">

            <div class="masthead clearfix">
                <div class="inner">
                    <nav>
                        <ul class="nav masthead-nav" style="margin-right:-20em;">
                            <li class="active"><a href="/">Home</a> </li>

                            {{#unless logged}}
                            <li class="active"><a href="/login">Login</a></li>
                            <li class="active"><a href="/register">Register</a>
                                {{/unless}}
                                {{#if logged}}
                                <li class="active"><a href="/logout">Logout</a></li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="inner cover">
                    <h1 class="cover-heading">Edit beer's price</h1>
                    <img class="profile-img" src="http://thewanderinghousewife.com/wp-content/uploads/2013/11/beer-2pint-tap-hand-circ-051214.png" alt="">
                    {{#if message}}
                    <h3 class="text-center text-info bg-info">{{{message}}}</h3>
                    {{/if}}
                    <form class="" action="/pubs/{{pubId}}/beers/{{id}}" method="post">
                        <input type="hidden" name="_method" value="PUT" />
                        <button class="btn btn-info" type="submit" name="submit">Edit beer</button>
                        <a class="btn btn-info" href="/pubs/{{pubId}}/beers">Back to the pub menu</a>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Degrees</th>
                                    <th>Into menu</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                            <tr class="beer_entry">
                                <td>{{name}}</td>
                                <td>{{type}}</td>
                                <td>{{alcoholic_degree}}%</td>
                                <td><input class="text-muted" type="text" name="price" placeholder="price"></td>
                            </tr>
                            </tbody>
                        </table>
                    </form>

                </div>

            </div>

        </div>

    </div>

    {{/extend}}

    {{#extend "stylesheets"}}
    <link rel='stylesheet' href='/stylesheets/cover.css' />
    {{/extend}}

    {{#extend "script"}}
    {{/extend}}
